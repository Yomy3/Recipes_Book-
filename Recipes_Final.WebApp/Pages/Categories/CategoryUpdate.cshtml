@page
@model Recipes_Final.WebApp.Pages.Categories.CategoryUpdateModel
@{
}

<form method="post">
    <div class="form-group">
    <label>Id</label>
    <input type="text" name="id" class="form-control" value="@Model.Category.Name" readonly asp-for="@Model.Category.Id">
    </div>
    <div class="form-group">
        <label>Update Category </label>
        <input type="text" name="name" class="form-control" placeholder="Category name" asp-for="@Model.Category.Name">
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Update</button>
</form>
