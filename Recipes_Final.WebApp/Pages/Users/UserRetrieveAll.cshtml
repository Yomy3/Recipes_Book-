@page
@model Recipes_Final.WebApp.Pages.Users.UserRetrieveAllModel
@{
}

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">User Name</th>
            <th scope="col">Email</th>
            <th scope="col">Is Admin</th>
            <th scope="col">Is Blocked</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        if (@Model.User.IsAdmin)
        {
            @foreach (var user in Model.Users)
            {
                <tr>
                    <th scope="row">@user.Id</th>
                    <td>@user.Name</td>
                    <td>@user.Username</td>
                    <td>@user.Email</td>
                    <td>@user.IsAdmin</td>
                    <td>@user.IsBlocked</td>

                    <td>
                        <a class="fa-solid fa-pencil" asp-area="" asp-page="/Users/Update" asp-route-id="@user.Id"></a> /
                        <a class="fa-solid fa-trash" asp-area="" asp-page="/Users/Delete" asp-route-id="@user.Id"
                           onclick="return confirm('You really want to delete this user?');"></a> @*/
                    <a class="fa-solid fa-eye" asp-area="" asp-page="/Users/View" asp-route-id="@user.Id"></a> *@

                    </td>
                </tr>
            }
            else
            {

            }
        }
    </tbody>
</table>
<br />
