@page

@model Recipes_Final.WebApp.Pages.Recipes.RecipeIngredientLineModel
@{
}



<div class="form-group">
    <label>Recipe Title</label>
    <input type="" name="id" class=" align-content-xxl-center" value="@Model.Recipe.Title" readonly asp-for="@Model.Recipe.Title">
</div>

<div class="form-group">
    <label>Recipe Id</label>
    <input type="" name="id" class=" align-content-xxl-center" value="@Model.Recipe.Id" readonly asp-for="@Model.Recipe.Id">
</div>



<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">Ingredient</th>
            <th scope="col">Quantity</th>
            <th scope="col">Measure</th>
            <th scope="col">Actions</th>


    </thead>
    <tbody>
        @foreach (var item in Model.IngredientLines)
        {
            <tr>
                <td>@item.Ingredient.Name</td>
                <td>@item.Quantity</td>
                <td>@item.Measure.Name</td>
                <td>
                    <a style="text-decoration:none" class="fa-solid fa-pencil" asp-area="" asp-page="/Recipes/RecipeUpdate" asp-route-id="@item.Id"></a> /
                </td>
            </tr>
        }
    </tbody>
</table>


