@page
@model Recipes_Final.WebApp.Pages.Ingredients.IngredientUpdateModel
@{
}

<form method="post">
    <div class="form-group">
        <label>Id</label>
        <input type="text" name="id" class="form-control" value="@Model.Ingredient.Id" readonly asp-for="@Model.Ingredient.Id">
    </div>
    <div class="form-group">
        <label>Update Ingredient </label>
        <input type="text" name="name" class="form-control" placeholder="Ingredient name" asp-for="@Model.Ingredient.Name">
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Update</button>
</form>