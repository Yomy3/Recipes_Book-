@page
@model Recipes_Final.WebApp.Pages.Measures.MeasureUpdateModel
@{
}

<form method="post">
    <div class="form-group">
        <label>Id</label>
        <input type="text" name="id" class="form-control" value="@Model.Measure.Id" readonly asp-for="@Model.Measure.Id">
    </div>
    <div class="form-group">
        <label>Update Measure </label>
        <input type="text" name="name" class="form-control" placeholder="Measure Type" asp-for="@Model.Measure.Name">
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Update</button>
</form>
